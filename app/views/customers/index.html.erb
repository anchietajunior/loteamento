<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('.title') %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<p id="notice"><%= notice %></p>

<div class="panel">

  <div class="panel-heading" style="margin-bottom: 20px;">
    <span class="panel-title"><%= link_to t('view.action.new'),
    new_customer_path, :class => "btn btn-default pull-right" %></span>
  </div>

  <div class="panel-body">
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
          <th><%= t(".name") %></th>
          <th><%= t(".cpf") %></th>
          <th><%= t(".first_tel") %></th>
          <th><%= t(".second_tel") %></th>
          <th><%= t(".email") %></th>
          <th><%= t(".marital_state") %></th>
          <th><%= t(".gender") %></th>
          <th colspan="3" style="text-align: center;">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.cpf %></td>
            <td><%= customer.first_tel %></td>
            <td><%= customer.second_tel %></td>
            <td><%= customer.email %></td>
            <td><%= customer.marital_state %></td>
            <td><%= customer.gender %></td>
            <td class="centralizado"><%= icon_link 'archive', customer %></td>
            <td class="centralizado"><%= icon_link 'edit', edit_customer_path(customer) %></td>
            <td class="centralizado"><%= icon_link_destroy 'close', customer %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>

  </div>
