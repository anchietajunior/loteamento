
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= @customer.name %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>CPF:</strong>
          <%= @customer.cpf %>
        </p>

        <p>
          <strong>Telefone (1):</strong>
          <%= @customer.first_tel %>
        </p>

        <p>
          <strong>Telefone (2):</strong>
          <%= @customer.second_tel %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @customer.email %>
        </p>

        <p>
          <strong>Estado Civil:</strong>
          <%= @customer.marital_state %>
        </p>

        <p>
          <strong>Sexo:</strong>
          <%= @customer.gender %>
        </p>

        <div class="form-group">
          <%= link_to 'Editar', edit_customer_path(@customer), :class => "btn btn-default" %>
          <%= link_to 'Clientes', customers_path, :class => "btn btn-default" %>
        </div>
      </div>
</div>
